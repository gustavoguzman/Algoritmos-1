#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define pi 3.1416
using namespace std;

float area_circulo(float r);

void main()
{float r, area;
 cout<<"ingrese el radio: ";
 cin>>r;
 area = area_circulo(r);
 cout<<"el area del circulo es igual a: "<<area;
 getch(); 
}

float area_circulo(float r)
{float a;
 a = pi*r*r;
 return a;
}
