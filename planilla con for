// lab2.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define iva 0.13
#define afp 0.121
#define sm 1420

using namespace std;

void main()
{int n, i;
 float sb, suma=0, p;
 cout<<"ingrese el numero de empleados: ";
 cin>>n;
 for(i=0; i<n; i++)
  {cout<<"ingrese el salario del trabajador "<<(i+1)<<" : ";
   cin>>sb;
   if(sb>15000)
     sb = sb - (sb*(afp+0.01));    
   else 
     sb = sb - (sb*afp);
   if(sb > (sb*2))
	   sb = sb - (sb*iva);
   suma = suma + sb;
  }
 p = suma/n;
 cout<<"el promedio de los salarios netos es: "<<p;
 getch();
}

